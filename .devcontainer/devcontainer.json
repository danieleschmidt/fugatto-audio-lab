{
  "name": "Fugatto Audio Lab Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "fugatto-dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-json",
        "ms-azuretools.vscode-docker",
        "github.vscode-github-actions",
        "github.copilot",
        "ms-vscode.test-adapter-converter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.linting.mypyEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"]
      }
    }
  },
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": true,
      "dockerDashComposeVersion": "v2"
    }
  },
  
  "forwardPorts": [8000, 8001, 6379],
  "portsAttributes": {
    "8000": {
      "label": "Fugatto API",
      "onAutoForward": "notify"
    },
    "8001": {
      "label": "Metrics",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },
  
  "postCreateCommand": "pip install -e '.[dev]' && pre-commit install",
  "postStartCommand": "echo 'Fugatto Audio Lab dev environment ready!'",
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=fugatto-models,target=/workspace/models,type=volume",
    "source=fugatto-data,target=/workspace/data,type=volume"
  ]
}